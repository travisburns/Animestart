@model IEnumerable<animestart.Models.AnimeTerm>
@{
    ViewData["Title"] = "Manage Anime Terms";
}
<div class="main-container">
    <div class="anime-section">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Manage Anime Terms</h2>
            <a asp-controller="Admin" asp-action="CreateTerm" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Term
            </a>
        </div>
        <div class="terms-grid">
            @foreach (var term in Model)
            {
                <div class="term-card">
                    <h4>@term.Term</h4>
                    <h5>@term.Category</h5>
                    <p>@(term.Definition.Length > 100 ? term.Definition.Substring(0, 100) + "..." : term.Definition)</p>
                    <div class="mt-3">
                        <a asp-controller="Admin" asp-action="EditTerm" asp-route-id="@term.Id"
                           class="btn btn-sm btn-primary me-2">Edit</a>
                        <a asp-controller="Admin" asp-action="DeleteTerm" asp-route-id="@term.Id"
                           class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>