@model animestart.Models.StarterPack
@{
    ViewData["Title"] = "Delete Starter Pack";
}
<div class="main-container">
    <div class="anime-section">
        <h2>Delete Starter Pack</h2>
        <div class="alert alert-danger">
            <h4>Are you sure you want to delete this starter pack?</h4>
        </div>

        <div class="detail-card mb-4">
            <h3>@Model.Name</h3>
            <p>@Model.Description</p>
        </div>

        <form asp-action="DeleteStarterPack" asp-controller="Admin" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex">
                <button type="submit" class="btn btn-danger me-2">Delete</button>
                <a asp-action="ManageStarterPacks" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>