@model animestart.Models.AnimeTerm
@{
    ViewData["Title"] = "Delete Term";
}
<div class="main-container">
    <div class="anime-section">
        <h2>Delete Term</h2>
        <div class="alert alert-danger">
            <h4>Are you sure you want to delete this term?</h4>
        </div>

        <div class="detail-card mb-4">
            <h3>@Model.Term</h3>
            <h5>@Model.Category</h5>
            <p>@Model.Definition</p>
        </div>

        <form asp-action="DeleteTerm" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex">
                <button type="submit" class="btn btn-danger me-2">Delete</button>
                <a asp-action="ManageTerms" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>