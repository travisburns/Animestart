@model IEnumerable<animestart.Models.StarterPack>
@{
    ViewData["Title"] = "Manage Starter Packs";
}
<div class="main-container">
    <div class="anime-section">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Manage Starter Packs</h2>
            <a asp-controller="Admin" asp-action="CreateStarterPack" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Starter Pack
            </a>
        </div>

        <div class="anime-grid">
            @foreach (var pack in Model)
            {
                <div class="anime-card">
                    <div class="anime-info">
                        <h4>@pack.Name</h4>
                        <p>@(pack.Description.Length > 100 ? pack.Description.Substring(0, 100) + "..." : pack.Description)</p>
                        <div class="mt-3">
                            <a asp-controller="Admin" asp-action="ManageStarterPackAnime" asp-route-id="@pack.Id"
                               class="btn btn-sm btn-success me-2">Manage Anime</a>
                            <a asp-controller="Admin" asp-action="EditStarterPack" asp-route-id="@pack.Id"
                               class="btn btn-sm btn-primary me-2">Edit</a>
                            <a asp-controller="Admin" asp-action="DeleteStarterPack" asp-route-id="@pack.Id"
                               class="btn btn-sm btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info">No starter packs available. Create one to get started.</div>
        }
    </div>
</div>