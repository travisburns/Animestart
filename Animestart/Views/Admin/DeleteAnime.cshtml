@model animestart.Models.Anime
@{
    ViewData["Title"] = "Delete Anime";
}
<div class="main-container">
    <div class="anime-section">
        <h2>Delete Anime</h2>
        <div class="alert alert-danger">
            <h4>Are you sure you want to delete this anime?</h4>
        </div>

        <div class="detail-card mb-4">
            <h3>@Model.Title</h3>
            <div class="anime-stats">
                <div class="stat-item">
                    <span class="stat-label">Genre</span>
                    <span class="stat-value">@Model.Genre</span>
                </div>
                <div class="stat-item">
                    <span class="stat-label">Year</span>
                    <span class="stat-value">@Model.Year</span>
                </div>
                <div class="stat-item">
                    <span class="stat-label">Era</span>
                    <span class="stat-value">@Model.Era</span>
                </div>
                <div class="stat-item">
                    <span class="stat-label">Rating</span>
                    <span class="stat-value">@Model.Rating/5</span>
                </div>
            </div>
            <p>@Model.Description</p>
        </div>

        <form asp-action="DeleteAnime" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex">
                <button type="submit" class="btn btn-danger me-2">Delete</button>
                <a asp-action="ManageAnime" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>