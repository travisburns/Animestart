@model animestart.Models.UserRecommendation
@{
    ViewData["Title"] = "Edit Recommendation";
}

<div class="main-container">
    <div class="recommendation-section">
        <h2>Edit Your Recommendation @(Model.Anime != null ? $"for {Model.Anime.Title}" : "")</h2>

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="AnimeId" />
            <input type="hidden" asp-for="UserId" />

            <div class="form-group mb-3">
                <label asp-for="Rating" class="control-label">Rating</label>
                <select asp-for="Rating" class="form-control">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <option value="@i">@i Stars</option>
                    }
                </select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Comment" class="control-label">Your Comment</label>
                <textarea asp-for="Comment" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-controller="Profile" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>